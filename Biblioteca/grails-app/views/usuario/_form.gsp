<%@ page import="biblioteca.Usuario" %>


<table border="1">
<tr>
<div class="fieldcontain ${hasErrors(bean: usuarioInstance, field: 'nombre', 'error')} ">
	<td><label for="nombre">
		<g:message code="usuario.nombre.label" default="Nombre:" />
		
	</label></td>
